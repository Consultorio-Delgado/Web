rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isDoctor() {
      return exists(/databases/$(database)/documents/doctors/$(request.auth.uid));
    }

    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }


    function isValidAppointment() {
      let data = request.resource.data;
      return 
        // Required Fields
        data.keys().hasAll(['date', 'doctorId', 'patientId', 'status', 'type', 'updatedAt']) &&
        // Data Types
        data.date is timestamp &&
        data.doctorId is string &&
        data.patientId is string &&
        data.status is string &&
        data.type is string &&
        data.updatedAt is timestamp &&
        // Data Integrity: Patient creating own OR Doctor creating for themselves (start/end) OR Admin
        (data.patientId == request.auth.uid || data.doctorId == request.auth.uid || isAdmin()) &&
        // Optional Fields Check
        !data.keys().hasAny(['isAdmin', 'role', 'permissions']);
    }

    function isValidAuditLog() {
      let data = request.resource.data;
      return data.keys().hasAll(['action', 'timestamp', 'performedBy']) &&
             data.timestamp is timestamp &&
             data.performedBy == request.auth.uid;
    }

    // 1. Users Collection (Patients)
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin() || isDoctor());
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin() || isDoctor());
      allow create: if isAuthenticated(); 
    }

    // 2. Doctors Collection (Public Profiles)
    match /doctors/{doctorId} {
      allow read: if true; // Publicly visible for booking
      allow write: if isAdmin(); // Only admins manage doctors
    }

    // 3. Appointments (appointments/{appointmentId})
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      
      // Strict Creation
      allow create: if isAuthenticated() && isValidAppointment();
      
      // Update: Admin, Doctor (Owner), or Patient (Cancel only)
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.doctorId == request.auth.uid) || // Doctor can update their own appointments
        (resource.data.patientId == request.auth.uid && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']) &&
         request.resource.data.status == 'cancelled')
      );
      
      allow delete: if isAdmin() || (isAuthenticated() && resource.data.doctorId == request.auth.uid);
    }

    // 4. Exceptions (Blocked Days)
    match /exceptions/{exceptionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || (isAuthenticated() && request.resource.data.doctorId == request.auth.uid);
      allow delete: if isAdmin() || (isAuthenticated() && resource.data.doctorId == request.auth.uid);
    }

    // 5. Audit Logs
    match /audit_logs/{logId} {
      // Strict Creation (System/User logs)
      allow create: if isAuthenticated() && isValidAuditLog();
      // Read/Delete: Admin only
      allow read, delete: if isAdmin();
      // No updates allowed
      allow update: if false; 
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Schema Validation Functions ---

    function isValidAppointment() {
      let data = request.resource.data;
      return 
        // Required Fields
        data.keys().hasAll(['date', 'doctorId', 'patientId', 'status', 'type', 'updatedAt']) &&
        // Data Types
        data.date is timestamp &&
        data.doctorId is string &&
        data.patientId is string &&
        data.status is string &&
        data.type is string &&
        data.updatedAt is timestamp &&
        // Data Integrity
        data.patientId == request.auth.uid && // Can only create for self
        // Optional Fields Check (prevent spoofing admin flags)
        !data.keys().hasAny(['isAdmin', 'role', 'permissions']);
    }

    function isValidAuditLog() {
      let data = request.resource.data;
      return 
        data.keys().hasAll(['action', 'performedBy', 'timestamp', 'metadata']) &&
        data.action is string &&
        data.performedBy is string &&
        data.timestamp is timestamp &&
        data.metadata is map &&
        data.performedBy == request.auth.uid; // Must match auth user
    }

    // --- Collection Rules ---

    // 1. Users (users/{userId})
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // 2. Doctors (doctors/{doctorId})
    match /doctors/{doctorId} {
      allow read: if true;
      allow write: if isAdmin() || (isAuthenticated() && request.auth.uid == doctorId);
    }

    // 3. Appointments (appointments/{appointmentId})
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      
      // Strict Creation
      allow create: if isAuthenticated() && isValidAppointment();
      
      // Update: Admin or Patient (Cancel only)
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.patientId == request.auth.uid && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']) &&
         request.resource.data.status == 'cancelled')
      );
      
      allow delete: if isAdmin();
    }

    // 4. Exceptions (Blocked Days)
    match /exceptions/{exceptionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || (isAuthenticated() && request.resource.data.doctorId == request.auth.uid);
      allow delete: if isAdmin() || (isAuthenticated() && resource.data.doctorId == request.auth.uid);
    }

    // 5. Audit Logs
    match /audit_logs/{logId} {
      // Strict Creation (System/User logs)
      allow create: if isAuthenticated() && isValidAuditLog();
      // Read/Delete: Admin only
      allow read, delete: if isAdmin();
      // No updates allowed
      allow update: if false; 
    }
  }
}
